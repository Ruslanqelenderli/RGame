@model MvcFinalApp.Models.RGameModel.Game
@{
    ViewBag.Title = "GameInfo";
}
<section class="section pt-55 ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 mb-20">
                <!--Post-single-->
                <div class="post-single">
                    <div class="post-single-image">
                        <img src="~/Uploads/GameImage/@Model.GamePhoto" alt="">
                    </div>
                    <div class="post-single-content">
                        <a href="@Url.Action("GetCategory", "Home", new { id = Model.CategoryId })" class="categorie">@Model.Category.Name</a>
                        <h4>Thank you for choosing us.</h4>
                        <div class="post-single-info">
                            <ul class="list-inline">
                                <li><img src="~/Uploads/UserImage/@Model.User.UserPhoto" alt=""></li>
                                <li>@Model.User.Name @Model.User.Surname  </li>
                                <li class="dot"></li>
                                <li>@Model.CreateDate.ToString("yy/MM/dd")</li>
                                
                                
                            </ul>
                        </div>
                    </div>

                    <div class="post-single-body">
                        <p>
                            @Model.Description
                        </p>
                        <h4 style="color:black"> Informations </h4>
                        <ul>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Name:</strong><span style="margin-left:5px"> @Model.Name</span></li>

                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Release Date:</strong><span style="margin-left:5px">@Model.CreateDate.ToString("yy/MM/dd")</span></li>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Language:</strong><span style="margin-left:5px"> @Model.Language</span></li>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">File Size:</strong><span style="margin-left:5px"> @Model.Size GB</span></li>

                        </ul>






                        <h4 style="color:black">System requirements</h4>

                        <ul>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Processor:</strong><span style="margin-left:5px"> @Model.Processor</span></li>

                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Graphics:</strong><span style="margin-left:5px">@Model.GraphicsCard</span></li>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Ram:</strong><span style="margin-left:5px"> @Model.RamSize GB</span></li>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Disk Space:</strong><span style="margin-left:5px"> @Model.DiskSpace GB</span></li>

                        </ul>

                        

                        <h4 style="color:black">Photos</h4>


                        <div class="row">
                            
                                <div class="col-md-6 ">
                                    <div class="image">
                                        <img src="~/Uploads/GameImage/@Model.GamePhoto" alt="">
                                    </div>
                                </div>
                            


                        </div>


                        <ul>
                            <li style="display:flex; align-items:center"><strong style="font-size:20px">Download Link:</strong><a href="@Model.DownloadLink">@Model.Name</a></li>

                        </ul>

                    </div>

                    
                </div> <!--/-->
                <!--next & previous-posts-->
                <div class="row">
                    
                </div><!--/-->
                <!--widget-comments-->
                <div class="widget mb-50">

                </div>
            </div>
            
            <div class="col-lg-4 max-width">
                <!--widget-author-->
                <div class="widget">
                    <div class="widget-author">
                        <a href="author.html" class="image">
                            <img src="~/Uploads/UserImage/@Model.User.UserPhoto" alt="">
                        </a>
                        <h6>
                            <span>Hi, I'm @Model.User.Name @Model.User.Surname</span>
                        </h6>
                        <p>

                            @Model.User.Description
                        </p>


                    </div>
                </div>
                
                
                
                
            </div>
        </div>
    </div>
</section><!--/-->

