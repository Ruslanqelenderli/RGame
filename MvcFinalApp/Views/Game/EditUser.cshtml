@model MvcFinalApp.Models.ManageModel.User
@{
    ViewBag.Title = "EditUser";
}

<section class="section pt-55 mb-50">
    <div class="container-fluid">
        <div class="sign widget">
            <div class="section-title">
                <h5>Edit</h5>
            </div>

            <form class="" method="post" enctype="multipart/form-data">
                <div class="form-group">

                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" name="Surname" value="@Model.Surname">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>
                <div class="form-group">

                    <input type="file" accept="image/*" class="form-control" name="UserPhoto" value="">
                </div>
                <div class="form-group">

                    <input type="email" class="form-control" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">

                    <input type="password" class="form-control" name="Password" value="">
                </div>
                <div class="sign-controls form-group">

                </div>
                <div class="form-group">
                    <button type="submit" class="btn-custom">Edit</button>
                </div>

            </form>
        </div>


    </div>
</section>

