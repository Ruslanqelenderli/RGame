@model MvcFinalApp.Models.ViewModels.AddGameViewModel
@{
    ViewBag.Title = "Add";
}
<section class="section pt-55 mb-50">
    <div class="container-fluid">
        <div class="sign widget">
            <div class="section-title">
                <h5>Game Add</h5>
            </div>

            <form class=" " method="post" enctype="multipart/form-data">
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Name*" name="Name" value="">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Description*" name="Description" value="">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="DownloadLink*" name="DownloadLink" value="">
                </div>
                <div class="form-group">

                    <input type="number" class="form-control" placeholder="Size*" name="Size" value="">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Language*" name="Language" value="">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Processor*" name="Processor" value="">
                </div>
                <div class="form-group">

                    <input type="number" class="form-control" placeholder="RamSize*" name="RamSize" value="">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="GraphicsCard*" name="GraphicsCard" value="">
                </div>
                <div class="form-group">

                    <input type="number" class="form-control" placeholder="DiskSpace*" name="DiskSpace" value="">
                </div>
                <div class="form-group">

                    <input type="file" accept="image/*" class="form-control" name="GamePhoto" value="">
                </div>
                <div class="form-group">

                    <select name="CategoryId" class="form-control">
                        <option value="0"></option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>


                </div>
                @if (Session["AddGameCheck"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        Incorrect info
                    </div>
                    Session["AddGameCheck"] = null;
                }



                <div class="form-group">
                    <button type="submit" class="btn-custom">Add</button>
                </div>

            </form>
        </div>


    </div>
</section>
